<Window x:Class="RogueAntivirusPatched.View.Windows.AnnoyingPopUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RogueAntivirusPatched.View.Windows"
        xmlns:viewModel="clr-namespace:RogueAntivirusPatched.ViewModel"
        mc:Ignorable="d"
        Title="AnnoyingPopUp" 
        Height="800" Width="800"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        SourceInitialized="Window_SourceInitialized"
        Loaded="Window_Loaded"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Topmost="True"
        d:DataContext="{d:DesignInstance viewModel:vmAnnoyingPopUp, IsDesignTimeCreatable=True}">
    <Window.Resources>
        <Style TargetType="TextBlock" BasedOn="{StaticResource PageFont}"/>
    </Window.Resources>
    
    <Grid>

        <Grid.RenderTransform>
            <TranslateTransform x:Name="ContentTransform" X="0" Y="0"/>
        </Grid.RenderTransform>

        <Border>

            <Grid Height="{Binding GridHeight}" Width="{Binding GridWidth}" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Border Background="{StaticResource RedFade}" CornerRadius="5 5 0 0">
                    <TextBlock Text="{Binding Title}"
                            VerticalAlignment="Center" HorizontalAlignment="Center"
                            FontSize="32"/>
                </Border>

                <Border Grid.Row="1" Background="White" CornerRadius="0 0 5 5">

                    <StackPanel Margin="10">
                        <TextBlock Style="{StaticResource CommonFont}" Text="{Binding SubTitle}"
                                Foreground="OrangeRed"
                                FontSize="25"
                                VerticalAlignment="Center" HorizontalAlignment="Center"
                                FontWeight="Bold"/>
                        <Border Style="{StaticResource GrayBorder}" BorderBrush="Black"/>
                        <TextBlock Style="{StaticResource CommonFont}" Text="{Binding Text}" FontSize="20"
                                   TextWrapping="Wrap"/>
                    </StackPanel>

                </Border>

                <Image x:Name="ThisImage" Source="{Binding PopImage}" Grid.Row="1" Width="100" Height="100" 
                    VerticalAlignment="Bottom" 
                    Margin="{Binding ImageMargin}"
                    Stretch="Fill"/>

                <StackPanel Margin="10" Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Center" Orientation="Horizontal">
                    <Button Style="{StaticResource ButtonDefault}" Width="150" Height="40" VerticalAlignment="Center" 
                        x:Name="Button1"
                        HorizontalAlignment="Left" Margin="0 0 10 0"
                        FontSize="25"
                        Content="{Binding ContentButtonFirst}"
                        Click="BtnFirstOption_Click"/>
                    <Button Style="{StaticResource ButtonDefault}" Width="150" Height="40" VerticalAlignment="Center" 
                        x:Name="Button2"
                        HorizontalAlignment="Right"
                        FontSize="25"
                        Content="{Binding ContentButtonSecond}"
                        Click="BtnSecondOption_Click"/>
                </StackPanel>

                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
            </Grid>
        </Border>

    </Grid>
</Window>
