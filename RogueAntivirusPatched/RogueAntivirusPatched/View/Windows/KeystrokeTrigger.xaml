<Window x:Class="RogueAntivirusPatched.View.Windows.KeystrokeTrigger"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RogueAntivirusPatched.View.Windows"
        xmlns:viewModel="clr-namespace:RogueAntivirusPatched.ViewModel"
        mc:Ignorable="d"
        Title="KeystrokeTrigger" Height="450" Width="800"
        WindowStyle="None"
        WindowState="Maximized"
        AllowsTransparency="True"
        Background="Transparent"
        Loaded="Window_Loaded"
        Topmost="True"
        Closing="Window_Closing"
        d:DataContext="{d:DesignInstance viewModel:vmKeystrokeTrigger, IsDesignTimeCreatable=True}">
    <Border>
        <Grid Visibility="{Binding IsShieldVisible}">
            <Image Source="{Binding BackgroundImage}"/>

            <Grid x:Name="ShieldGrid"/>

            <Grid x:Name="TextGrid"/>
        </Grid>
    </Border>
</Window>
