<Page x:Class="RogueAntivirusPatched.View.Pages.AntivirusPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RogueAntivirusPatched.View.Pages"
      xmlns:viewModel="clr-namespace:RogueAntivirusPatched.ViewModel"
      xmlns:userControl="clr-namespace:RogueAntivirusPatched.View.CustomUserControl"
      mc:Ignorable="d" 
      d:DesignHeight="460" d:DesignWidth="800"
      Title="AntivirusPage"
      Loaded="Page_Loaded"
      d:DataContext="{d:DesignInstance viewModel:vmAntivirusPage, IsDesignTimeCreatable=True}">

    <Page.Resources>
        
    </Page.Resources>
    
    <Grid>
        <Border Background="{StaticResource PageBackground}"/>

        <Image Width="100" Height="100" Stretch="Uniform"
               Source="{StaticResource Fortress}"
               VerticalAlignment="Top"
               HorizontalAlignment="Right"
               Margin="10"/>

        <StackPanel Margin="10">
            <TextBlock Style="{StaticResource PageFont}" Text="Antivirus Center" FontSize="26" FontWeight="Black"
                       Margin="0 0 0 10"/>
            <TextBlock Style="{StaticResource PageFont}" Text="{Binding ProcessStatus}"
                        Margin="0 0 0 10"/>
            <StackPanel IsEnabled="{Binding ModesRadialEnabled}" Orientation="Horizontal" Margin="0 0 0 10">
                <TextBlock Style="{StaticResource PageFont}" Text="Scan Mode:" Margin="0 0 10 0"/>
                <userControl:CustomRadialButton SetIsChecked="{Binding IsQuick, Mode=TwoWay}" SetIsEnabled="{Binding ModesRadialEnabled}" SetContent="Quick" SetGroupName="ScanOptions" Margin="0 0 10 0"/>
                <userControl:CustomRadialButton PreviewMouseDown="BtnDeepScan_Click" SetIsChecked="{Binding IsDeep, Mode=TwoWay}" SetIsEnabled="{Binding ModesRadialEnabled}" SetGroupName="ScanOptions" SetContent="Deep" Margin="0 0 10 0"/>
                <userControl:CustomRadialButton PreviewMouseDown="BtnCustomScan_Click" SetIsChecked="{Binding IsCustom, Mode=TwoWay}" SetIsEnabled="{Binding ModesRadialEnabled}" SetGroupName="ScanOptions" SetContent="Custom" Margin="0 0 10 0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <ProgressBar Style="{StaticResource CustomProgressBar}" Value="{Binding BarValue}" Minimum="0" Maximum="100" Height="20" Width="455" Margin="0 0 10 0"/>
                <userControl:CommonButton PreviewMouseLeftButtonDown="BtnStartClick" SetContent="Start" SetHeight="25" SetWidth="80" SetIsEnabled="{Binding IsEnabledStartBtn}" IsEnabled="{Binding IsEnabledStartBtn}" Margin="0 0 10 0"/>
                <userControl:CommonButton PreviewMouseLeftButtonDown="BtnStopClick" SetContent="Stop" SetHeight="25" SetWidth="80" SetIsEnabled="{Binding IsEnabledStopBtn}" IsEnabled="{Binding IsEnabledStopBtn}" Margin="0 0 10 0"/>
                <userControl:CommonButton PreviewMouseLeftButtonDown="BtnPauseClick" SetContent="Pause" SetHeight="25" SetWidth="80" SetIsEnabled="{Binding IsEnabledPauseBtn}" IsEnabled="{Binding IsEnabledPauseBtn}" Margin="0 0 10 0"/>
            </StackPanel>
            <DataGrid x:Name="ThreatData" Style="{StaticResource CustomDataGrid}" ItemsSource="{Binding ThreatInfo}" Height="200" Margin="0 0 0 10"/>
            <TextBlock Style="{StaticResource PageFont}" Text="{Binding TextProcessingFile, UpdateSourceTrigger=PropertyChanged}" FontWeight="Black" Margin="0 0 150 5"/>
            <TextBlock Style="{StaticResource PageFont}" Text="{Binding TextScannedFiles, UpdateSourceTrigger=PropertyChanged}" Margin="0 0 150 5"/>
            <TextBlock Style="{StaticResource PageFontRed}" Text="{Binding TextThreatsDetected, UpdateSourceTrigger=PropertyChanged}" Foreground="{Binding ForegroundThreatsDetected, UpdateSourceTrigger=PropertyChanged}" Margin="0 0 150 5"/>
            <TextBlock Style="{StaticResource PageFont}" Text="{Binding TextThreatsRemoved, UpdateSourceTrigger=PropertyChanged}" Margin="0 0 150 5"/>
        </StackPanel>
        <userControl:CommonButton SetContent="Remove Threats" SetWidth="120"
                                  VerticalAlignment="Bottom" HorizontalAlignment="Right"
                                  Margin="0 0 10 10"
                                  SetIsEnabled="{Binding IsRemoveThreats, Mode=TwoWay}"
                                  PreviewMouseLeftButtonDown="BtnRemoveThreatsClick"/>
    </Grid>
</Page>
