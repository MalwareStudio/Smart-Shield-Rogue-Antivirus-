<Application x:Class="Rogue_Installer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Rogue_Installer"
             xmlns:viewmodel="clr-namespace:Rogue_Installer.MVVM.ViewModel"
             StartupUri="WpfWindow/Loader.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/GlobalResources.xaml"/>
                <ResourceDictionary Source="Styles/CustomScrollViewer.xaml"/>
                <ResourceDictionary Source="Styles/Animations.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
