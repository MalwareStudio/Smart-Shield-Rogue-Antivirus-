<Page x:Class="Rogue_Installer.MVVM.View.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Rogue_Installer.MVVM.View.Pages"
      xmlns:viewmodel="clr-namespace:Rogue_Installer.MVVM.ViewModel"
      xmlns:userControl="clr-namespace:Rogue_Installer.MVVM.View.UserControls"
      mc:Ignorable="d" 
      d:Height="500" d:Width="600"
      Title="MainPage"
      d:DataContext="{d:DesignInstance viewmodel:vmMainWindow, IsDesignTimeCreatable=True}"
      Loaded="Page_Loaded">

    <Grid>
        <StackPanel>
            <Border Width="600" Height="300" Style="{StaticResource ContentBorder}">
                <Grid>
                    <ScrollViewer Style="{StaticResource CustomScrollViewer}">
                        <StackPanel Margin="10">
                            <TextBlock Text="{Binding ImportantText}" Foreground="{StaticResource RedFade}" Style="{StaticResource CommonFont}"
                                       TextWrapping="WrapWithOverflow"
                                       HorizontalAlignment="Left"
                                       Margin="0 0 0 10"/>
                            <TextBlock Style="{StaticResource CommonFont}" 
                               Text="{Binding ContentText}"
                               TextWrapping="WrapWithOverflow"/>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </StackPanel>

        <userControl:InstallExitButton Margin="0 0 0 0"/>

    </Grid>
</Page>
