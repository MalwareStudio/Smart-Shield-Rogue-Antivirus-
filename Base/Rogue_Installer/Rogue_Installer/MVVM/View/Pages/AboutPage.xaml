<Page x:Class="Rogue_Installer.MVVM.View.Pages.AboutPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Rogue_Installer.MVVM.View.Pages"
      xmlns:viewmodel="clr-namespace:Rogue_Installer.MVVM.ViewModel"
      mc:Ignorable="d" 
      d:Height="500" d:Width="600"
      Title="AboutPage"
      Loaded="Page_Loaded"
      d:DataContext="{d:DesignInstance viewmodel:vmAboutPage, IsDesignTimeCreatable=True}">

    <Page.Resources>
        <Style TargetType="ScrollViewer" BasedOn="{StaticResource CustomScrollViewer}">
            
        </Style>
    </Page.Resources>
    
    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center">

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Style="{StaticResource CommonFont}" Text="Smart Shield.exe" TextAlignment="Center" FontWeight="Black" TextWrapping="WrapWithOverflow" Margin="0 0 0 5"/>
                <Border Style="{StaticResource ContentBorder}" Height="200" Width="200">
                    <Grid>
                        <Rectangle>
                            <Rectangle.Fill>
                                <ImageBrush ImageSource="{Binding AnimBackground}" Stretch="Fill"/>
                            </Rectangle.Fill>
                        </Rectangle>
                        <Image Style="{StaticResource ImageMotionAnimation}" 
                               Source="{StaticResource HappyShield}" Stretch="Uniform"
                               Margin="10"/>
                    </Grid>
                </Border>
            </StackPanel>

            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="15 0 0 0">
                <TextBlock Style="{StaticResource CommonFont}" Text="Specifications" TextAlignment="Center" FontWeight="Black" TextWrapping="WrapWithOverflow" Margin="0 0 0 5"/>
                <Border Style="{StaticResource ContentBorder}" Height="350" Width="350">
                    <ScrollViewer>
                        <StackPanel>
                            <TextBlock Style="{StaticResource CommonFont}" Text="{Binding SpecText, UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap" FontSize="14" TextAlignment="Left" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"/>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
