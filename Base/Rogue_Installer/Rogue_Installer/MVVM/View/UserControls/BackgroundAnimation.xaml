<UserControl x:Class="Rogue_Installer.MVVM.View.UserControls.BackgroundAnimation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Rogue_Installer.MVVM.View.UserControls"
             mc:Ignorable="d" 
             d:Width="800" d:Height="600">
    <UserControl.Resources>
        <Storyboard x:Key="ScrollAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="AnimationTrans"
                 Storyboard.TargetProperty="X"
                 From="0"
                 To="6380"
                 Duration="0:3:30">
            </DoubleAnimation>
        </Storyboard>
    </UserControl.Resources>
    
    <Grid x:Name="BackgroundAnim" ClipToBounds="True" Opacity="0.3">
        <Canvas>
            <Canvas.RenderTransform>
                <TranslateTransform x:Name="AnimationTrans" X="0"/>
            </Canvas.RenderTransform>

            <Image Source="{StaticResource BackHappy}" Canvas.Right="0" Width="600"/>
            <Image Source="{StaticResource BackSatisfied}" Canvas.Right="580" Width="600"/>
            <Image Source="{StaticResource BackAverage}" Canvas.Right="1160" Width="600"/>
            <Image Source="{StaticResource BackAngry}" Canvas.Right="1740" Width="600"/>
            <Image Source="{StaticResource BackCursed}" Canvas.Right="2320" Width="600"/>
            <Image Source="{StaticResource BackClutter}" Canvas.Right="2900" Width="600"/>
            <Image Source="{StaticResource BackExlon}" Canvas.Right="3480" Width="600"/>
            <Image Source="{StaticResource BackAG}" Canvas.Right="4060" Width="600"/>
            <Image Source="{StaticResource BackEnderman}" Canvas.Right="4640" Width="600"/>
            <Image Source="{StaticResource BackCrypto}" Canvas.Right="5220" Width="600"/>
            <Image Source="{StaticResource BackTranium}" Canvas.Right="5800" Width="600"/>

            <Image Source="{StaticResource BackHappy}" Canvas.Right="6380" Width="600"/>
            <Image Source="{StaticResource BackSatisfied}" Canvas.Right="6960" Width="600"/>
        </Canvas>

        <Grid.Triggers>
            <EventTrigger RoutedEvent="Loaded">
                <BeginStoryboard Storyboard="{StaticResource ScrollAnimation}"/>
            </EventTrigger>
        </Grid.Triggers>
    </Grid>
</UserControl>
