<UserControl x:Class="Rogue_Installer.MVVM.View.UserControls.HeaderButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Rogue_Installer.MVVM.View.UserControls"
             mc:Ignorable="d" 
             Height="25" Width="55">
    <Grid x:Name="HeaderButtons">
        <StackPanel Orientation="Horizontal">
            <Button Style="{StaticResource HeaderMinBtnStyle}" Click="MinBtn_Click" Height="25" Width="25" Foreground="LightBlue" VerticalAlignment="Center" Content="—" Margin="0 0 5 0"/>
            <Button Style="{StaticResource HeaderExitBtnStyle}" Click="ExitBtn_Click" Height="25" Width="25" Foreground="PaleVioletRed" VerticalAlignment="Center" Content="X"/>
        </StackPanel>
    </Grid>
</UserControl>
