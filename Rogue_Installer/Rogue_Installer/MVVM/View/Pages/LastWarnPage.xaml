<Page x:Class="Rogue_Installer.MVVM.View.Pages.LastWarnPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Rogue_Installer.MVVM.View.Pages"
      xmlns:viewmodel="clr-namespace:Rogue_Installer.MVVM.ViewModel"
      xmlns:userControl="clr-namespace:Rogue_Installer.MVVM.View.UserControls"
      mc:Ignorable="d" 
      d:Height="500" d:Width="600"
      Title="LastWarnPage"
      Loaded="Page_Loaded"
      d:DataContext="{d:DesignInstance viewmodel:vmMainWindow, IsDesignTimeCreatable=True}">

    <Grid>
        <StackPanel>
            <Border Width="600" Height="300" Style="{StaticResource ContentBorder}">
                <ScrollViewer Style="{StaticResource CustomScrollViewer}">
                    <StackPanel Margin="10">
                        <TextBlock Style="{StaticResource CommonFont}" Text="{Binding TextLastWarning}"
                                   TextWrapping="WrapWithOverflow"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top" Margin="0 0 0 10"/>
                        <TextBlock Style="{StaticResource CommonFont}" Foreground="{StaticResource RedFade}" 
                                    Text="{Binding LastImportantMessage}"
                                    TextWrapping="WrapWithOverflow"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </StackPanel>

        <userControl:InstallExitButton Margin="0 0 0 0"/>

    </Grid>
</Page>
