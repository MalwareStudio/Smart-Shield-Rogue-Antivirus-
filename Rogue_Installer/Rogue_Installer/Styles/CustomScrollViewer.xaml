<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="RepeatButtonUp" TargetType="RepeatButton">
        <Setter Property="Height" Value="20"/>
        <Setter Property="Width" Value="20"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RepeatButton">
                    <Grid>
                        <Border Background="{StaticResource GrayFade}"
                        BorderBrush="{StaticResource WhiteFade}"
                        BorderThickness="2"
                        CornerRadius="5 5 0 0">
                            <ContentPresenter HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="RepeatButtonDown" TargetType="RepeatButton">
        <Setter Property="Height" Value="20"/>
        <Setter Property="Width" Value="20"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RepeatButton">
                    <Grid>
                        <Border Background="{StaticResource GrayFade}"
                BorderBrush="{StaticResource WhiteFade}"
                BorderThickness="2"
                CornerRadius="0 0 5 5">
                            <ContentPresenter HorizontalAlignment="Center" 
                              VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="RepeatButtonLeft" TargetType="RepeatButton">
        <Setter Property="Width" Value="20"/>
        <Setter Property="Height" Value="20"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RepeatButton">
                    <Grid>
                        <Border Background="{StaticResource GrayFade}"
                    BorderBrush="{StaticResource WhiteFade}"
                    BorderThickness="2"
                    CornerRadius="5 0 0 5">
                            <ContentPresenter HorizontalAlignment="Center" 
                                  VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="RepeatButtonRight" TargetType="RepeatButton">
        <Setter Property="Width" Value="20"/>
        <Setter Property="Height" Value="20"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RepeatButton">
                    <Grid>
                        <Border Background="{StaticResource GrayFade}"
            BorderBrush="{StaticResource WhiteFade}"
            BorderThickness="2"
            CornerRadius="0 5 5 0">
                            <ContentPresenter HorizontalAlignment="Center" 
                          VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="CustomThumb" TargetType="Thumb">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <Border Background="{StaticResource GrayFade}"
                    BorderBrush="{StaticResource WhiteFade}"
                    BorderThickness="2"
                    CornerRadius="5"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="CustomScrollBar" TargetType="ScrollBar">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ScrollBar">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <RepeatButton Style="{StaticResource RepeatButtonUp}" Grid.Row="0"
                      Command="ScrollBar.LineUpCommand">
                            <Path Data="M 0,6 L 6,0 L 12,6 Z"
                            Fill="Black"
                            Stretch="None" />
                        </RepeatButton>

                        <Track x:Name="PART_Track"
               Grid.Row="1"
               IsDirectionReversed="true">
                            <Track.Thumb>
                                <Thumb Style="{StaticResource CustomThumb}" x:Name="PART_Thumb"
                       Height="Auto"/>
                            </Track.Thumb>
                        </Track>

                        <RepeatButton Style="{StaticResource RepeatButtonDown}" Grid.Row="2"
                      Command="ScrollBar.LineDownCommand">
                            <Path Data="M 0,0 L 6,6 L 12,0 Z"
                            Fill="Black"
                            Stretch="None" />
                        </RepeatButton>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="CustomScrollBarHor" TargetType="ScrollBar">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ScrollBar">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <RepeatButton Style="{StaticResource RepeatButtonLeft}" Grid.Column="0"
                              Command="ScrollBar.LineLeftCommand">
                            <Path Data="M 6,0 L 0,6 L 6,12 Z"
                            Fill="Black"
                            Stretch="None" />
                        </RepeatButton>

                        <Track x:Name="PART_Track"
                       Grid.Column="1">
                            <Track.Thumb>
                                <Thumb x:Name="PART_Thumb" Style="{StaticResource CustomThumb}"
                               Width="Auto"/>
                            </Track.Thumb>
                        </Track>

                        <RepeatButton Style="{StaticResource RepeatButtonRight}" Grid.Column="2"
                              Command="ScrollBar.LineRightCommand">
                            <Path Data="M 0,0 L 6,6 L 0,12 Z"
                            Fill="Black"
                            Stretch="None" />
                        </RepeatButton>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="CustomScrollViewer" TargetType="ScrollViewer">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ScrollViewer">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <ScrollContentPresenter x:Name="PART_ScrollContentPresenter"
                    Grid.Column="0" Grid.Row="0"/>

                        <ScrollBar Style="{StaticResource CustomScrollBar}" x:Name="PART_VerticalScrollBar"
                   Grid.Row="0" Grid.Column="1"
                   Orientation="Vertical"
                   Maximum="{TemplateBinding ScrollableHeight}"
                   Value="{TemplateBinding VerticalOffset}"
                   ViewportSize="{TemplateBinding ViewportHeight}"
                   Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"/>

                        <ScrollBar Style="{StaticResource CustomScrollBarHor}" x:Name="PART_HorizontalScrollBar"
                    Grid.Row="1"
                    Grid.Column="0"
                    Orientation="Horizontal"
                    Maximum="{TemplateBinding ScrollableWidth}"
                    ViewportSize="{TemplateBinding ViewportWidth}"
                    Value="{TemplateBinding HorizontalOffset}"
                    Visibility="{TemplateBinding ComputedHorizontalScrollBarVisibility}"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>