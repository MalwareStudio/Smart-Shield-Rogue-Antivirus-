<Window x:Class="Rogue_Installer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rogue_Installer"
        xmlns:userControls="clr-namespace:Rogue_Installer.MVVM.View.UserControls"
        xmlns:viewmodel="clr-namespace:Rogue_Installer.MVVM.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="750"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        d:DataContext="{d:DesignInstance viewmodel:vmMainWindow, IsDesignTimeCreatable=True}"
        Loaded="Window_Loaded"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Border MouseLeftButtonDown="Border_MouseLeftButtonDown" Grid.Row="0" Background="Black" Height="30" CornerRadius="10 10 0 0" VerticalAlignment="Top">
            <Grid>
                <TextBlock Style="{StaticResource CommonFont}" Text="{Binding AppName, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Margin="10 0 0 0"/>

                <userControls:HeaderButton HorizontalAlignment="Right" Margin="0 0 5 0"/>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <Rectangle RadiusX="15" RadiusY="15">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="{Binding RandomBackground}" Stretch="UniformToFill"/>
                </Rectangle.Fill>
            </Rectangle>
        </Grid>

        <userControls:BackgroundAnimation Grid.Row="1" ClipToBounds="True"/>

        <Border Grid.Row="1" BorderBrush="Black" BorderThickness="5" CornerRadius="0 0 10 10">
            <Grid>

                <userControls:MenuControl MouseEnter="MenuControl_MouseEnter" IsEnabled="{Binding IsMenuEnabled}"/>

                <StackPanel Margin="10 60 10 10">
                    <TextBlock Style="{StaticResource TitleFont}" Text="{Binding PageTitle, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                    <Border Style="{StaticResource Line}" Margin="0 5 0 0"/>
                    <Frame Margin="10" Height="400" Content="{Binding CurrentPage, UpdateSourceTrigger=PropertyChanged}" NavigationUIVisibility="Hidden"/>
                </StackPanel>
            </Grid>
        </Border>

        <Button Style="{StaticResource VolumeButton}" Click="Volume_Click" Grid.Row="1"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Right"
                Margin="10">
            <Image Source="{Binding VolumeIcon}" Stretch="UniformToFill"/>
        </Button>

        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
    </Grid>
</Window>
